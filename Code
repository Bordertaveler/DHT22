* Pin Conections
*
* VCC ---> 3.3 pin
* Data ---> Analog 12 pin
* NC ---> not connected
* GND ---> GND
*
*4K& (4700) Ohm resistor between 3.3V and data pin
*
*/

#include "DHT.h"   // Library for DHT sensors

#define dhtPin 12  // data pin

/*
* Uncomment the correct DHT chip
//#define dhtType DHT11           //DHT 11
